<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.agnaldoburgojunior.myclassv1.Activitys.CursoView">

        <EditText
            android:id="@+id/nome_curso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_school"
            android:hint=" Insira o nome de seu curso"
            android:inputType="text"
            android:maxLength="50" />

        <EditText
            android:id="@+id/ra_curso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_person_pin"
            android:hint=" Insira seu RA"
            android:maxLength="20"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/instituicao_curso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_school"
            android:hint=" Insira o nome de sua instituição"
            android:maxLength="50"
            android:inputType="text" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/aprov"
            android:hint="Frequencia de Aprovação"
            android:inputType="number"
            android:maxLength="3"
            android:drawableLeft="@drawable/ic_timelapse"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/media"
            android:hint="Média de Aprovação"
            android:inputType="number"
            android:maxLength="2"
            android:drawableLeft="@drawable/ic_timelapse"/>
    </LinearLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/turno"
                android:layout_width="match_parent"
                android:layout_height="24sp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_timelapse"
                android:text=" Turno"/>

            <Spinner
                android:id="@+id/spinner_turno"
                android:layout_width="match_parent"
                android:layout_height="24sp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:spinnerMode="dropdown"></Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/semestre"
                android:layout_width="match_parent"
                android:layout_height="24sp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_timelapse"
                android:text=" Semestre"/>

            <Spinner
                android:id="@+id/spinner_semestre"
                android:layout_width="match_parent"
                android:layout_height="24sp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:spinnerMode="dropdown"></Spinner>
        </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp">


        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/inserir_curso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check"
            app:fab_size="normal"
            app:fab_label="Cadastrar Tarefas"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_colorPressed="@color/colorPrimary"
            android:layout_gravity="right"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>
